# Dockerfile for the NodeJS Backend REST API Server
# -------------------------------------------------

FROM node:16.8

WORKDIR /app

# Dependency Installation
COPY package*.json* ./
RUN npm install 

# Copy Source Files
COPY . .

CMD [ "node", "server.js" ]
